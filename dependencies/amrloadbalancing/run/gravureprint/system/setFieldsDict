FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location	"system";
	object		setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
defaultFieldValues
(
	volScalarFieldValue alpha1 0
);

regions
(
	boxToCell
	{
		box ( -0.5 -0.5 -5 ) ( 0.5 -0.003 5 );
		fieldValues
		(
			volScalarFieldValue alpha1 1
		);
	}

	//blade
	boxToCell
	{
		box ( 0 -0.005 -5 ) ( 0.011 0.001 5 );
		fieldValues
		(
			volScalarFieldValue alpha1 1
		);
	}

	//substrate
	boxToCell
	{
		box ( -0.002 0.009 -5 ) ( 0.001 0.1 5 );
		fieldValues
		(
			volScalarFieldValue alpha1 1
		);
	}

	//drop on substrate
	cylinderToCell
	{
		p1 (-0.009 0.0101 0);
		p2 (-0.009 0.0101 -0.0001);
		radius 0.0001;
		fieldValues
		(
			volScalarFieldValue alpha1 1
		);
	}
);

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //