PISO
{
    // p-U coupling
    nCorrectors                 3; // PISO loops
    nNonOrthogonalCorrectors    1;
    pRefPoint (10 0 0);
    pRefValue 0;

    // convergence control
    momentumTolerance           1e-3;
    innerTolerance              5e-5;
}

PIMPLE
{
    // p-U coupling
    nOuterCorrectors            3; // SIMPLEC loops
    nCorrectors                 2; // PISO loops
    nNonOrthogonalCorrectors    2;
    pRefPoint (10 0 0);
    pRefValue 0;

    // interface tracking
    adjustFluxFrequency         100;

    // convergence control
    momentumTolerance           1e-3;
    innerTolerance              5e-5;
}


relaxationFactors
{
    p 1;//0.4;
    U 1;//0.6;
